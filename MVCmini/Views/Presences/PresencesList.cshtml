@model IEnumerable<MVCmini.ViewModel.StudentPresenceVM>

@{
    ViewBag.Title = "Lista obecności";
}

<h2>Lista obecności</h2>

<table>
    <tr>
        <th>
            Date
        </th>
        <th>
            Value
        </th>
        <th>
            StudentName
        </th>
        <th>
            StudentSurname
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentSurname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.PresenceID  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.PresenceID  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.PresenceID  })
        </td>
    </tr>
}

</table>
