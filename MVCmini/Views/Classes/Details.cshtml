@model IEnumerable<MVCmini.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj Studenta", "Create")
</p>
<table>
    <tr>
        <th>
            ID Grupy
        </th>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Ocena
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", "Students", new { id = item.StudentID }, null) |
            @Html.ActionLink("Edytuj", "Edit", "Students", new { id = item.StudentID }, null) |
            @Html.ActionLink("Usuń z Grupy", "DeleteStudent", new { id=item.StudentID })
        </td>
    </tr>
}

</table>
